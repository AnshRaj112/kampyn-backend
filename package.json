  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "7.0.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.52.1",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "4.3.4",
    "delayed-stream": "^1.0.0",
    "dotenv": "16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.15.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "loader": "2.1.1",
    "mongoose": "^8.12.1",
    "node-fetch": "3.3.2",
