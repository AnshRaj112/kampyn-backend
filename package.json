  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "autocannon": "^7.15.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^7.0.0",
    "supertest-as-promised": "^4.0.0"
  },
  "engines": {
    "node": "18.x || 20.x || 22.x",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "debug": "4.3.4"
  },
  "resolutions": {
    "debug": "4.3.4"
  },
  "peerDependenciesMeta": {
    "supports-color": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.js": [
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "test/**/*.js": [
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci",
      "pre-push": "npm run test:ci && npm run test:performance"
    }
  }
}
